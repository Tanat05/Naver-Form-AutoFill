{
  "manifest_version": 3,
  "name": "네이버 폼 자동 채우기",
  "version": "1.1",
  "description": "네이버 폼의 이메일, 이름, 전화번호를 자동으로 채워줍니다.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://office.naver.com/form/*",
    "https://form.naver.com/preview/*",
    "https://form.naver.com/response/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
